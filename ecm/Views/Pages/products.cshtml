
@model PagedList.IPagedList<ecm.Models.item>
@using PagedList.Mvc; 

@section title{
    @ViewBag.Title
}

@section d{
active
}

<div class="container main-container headerOffset">

    <!-- Main component call to action -->

    <div class="row">
        <div class="breadcrumbDiv col-lg-12">
            <ul class="breadcrumb">
                <li><a href="~/pages/index">Home</a></li>
                <li class="active">Kilite Products</li>
            </ul>
        </div>
    </div>
    <!-- /.row  -->

    <div class="row">

        <!--left column-->

        <div class="col-lg-3 col-md-3 col-sm-12">
            <div class="panel-group" id="accordionNo">
                <!--Category-->
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title"><a data-toggle="collapse" href="#collapseCategory"
                                                   class="collapseWill active ">
                            <span class="pull-left"> <i class="fa fa-caret-right"></i></span> Category </a></h4>
                    </div>
                    <div id="collapseCategory" class="panel-collapse collapse in">
                        <div class="panel-body">
                            <ul class="nav nav-pills nav-stacked tree">
                                <li><a href="products?catagory=Phenyle"> Phenyle </a></li>
                                <li><a href="products?catagory=Toilet Cleaner"> Toilet Cleaner </a></li>
                                <li><a href="products?catagory=Fabric Bleach"> Fabric Bleach </a></li>
                                <li><a href="products?catagory=Feeder"> Baby Feeder Cleaner </a></li>
                                <li><a href="products?catagory=Gel Toilet Cleaner"> Gel Toilet Cleaner </a></li>
                                <li><a href="products?catagory=Glass Cleaner"> Glass Cleaner </a></li>
                                <li><a href="products?catagory=Dish Wash"> Dish Wash </a></li>
                                <li><a href="products?catagory=Insect Killer Powder"> Insect Killer Powder </a></li>
                                <li><a href="products?catagory=Insect Killer Liquid"> Insect Killer Liquid </a></li>
                                <li><a href="products?catagory=Naphthaleen Balls"> Naphthaleen Balls </a></li>
                                <li><a href="products?catagory=Liquid Blue"> Liquid Blue </a></li>
                                @*<option value="Phenyle">Phenyle</option>
                                <option value="Toilet Cleaner">Toilet Cleaner</option>
                                <option value="Fabric Bleach">Fabric Bleach</option>
                                <option value="Feeder">Baby Feeder Cleaner</option>
                                <option value="Gel Toilet Cleaner">Gel Toilet Cleaner</option>
                                <option value="Glass Cleaner">Glass Cleaner</option>
                                <option value="Dish Wash">Dish wash</option>
                                <option value="Insect Killer Powder">Insect Killer Powder</option>
                                <option value="Insect Killer Liquid">Insect Killer Liquid</option>
                                <option value="Naphthaleen Balls">Naphthaleen Balls</option>
                                <option value="Liquid Blue">Liquid Blue</option>*@
                            </ul>
                        </div>
                    </div>
                </div>
                <!--/Category menu end-->

            </div>
        </div>

        <!--right column-->
        <div class="col-lg-9 col-md-9 col-sm-12">
            <div class="w100 clearfix category-top">
                <h2> Catogarized Products </h2>

            </div>
            <!--/.category-top-->

            <div class="w100 productFilter clearfix">

                <div class="pull-right ">
                    @*<div class="change-order pull-right">
                        <select class="form-control" name="orderby">
                            <option selected="selected">Default sorting</option>
                            <option value="popularity">Sort by popularity</option>
                            <option value="rating">Sort by average rating</option>
                            <option value="date">Sort by newness</option>
                            <option value="price">Sort by price: low to high</option>
                            <option value="price-desc">Sort by price: high to low</option>
                        </select>
                    </div>*@
                    <div class="change-view pull-right"><a href="#" title="Grid" class="grid-view"> <i
                            class="fa fa-th-large"></i> </a> <a href="#" title="List" class="list-view "><i
                            class="fa fa-th-list"></i></a></div>
                </div>
            </div>
            <!--/.productFilter-->
            <div class="row  categoryProduct xsResponse clearfix">

                @foreach (var item in Model)
                {
                    <div class="item col-sm-4 col-lg-4 col-md-4 col-xs-6">
                        <div class="product">
                            <div class="image">
                            
                                <a href="~/pages/productdetails/@item.Id"><img src="~/images/@item.photo1"  alt="img"
                                                                    class="img-responsive"></a>
                            </div>
                            <div class="description">
                                <h4><a href="~/pages/productdetails/@item.Id">@item.name</a></h4>

                                <div class="grid-description">
                                    <p>@item.description</p>
                                </div>
                                <div class="list-description">
                                    <p> @item.description </p>
                                </div>
                            </div>
                            <div class="price"><span>$@item.unit_price</span></div>
                            <div class="action-control"><a class="btn btn-primary" href="~/Pages/productdetails/@item.Id" > <span class="add2cart"><i
                                    class="glyphicon glyphicon-shopping-cart"> </i> Add to cart </span> </a></div>
                        </div>
                    </div>
                }
                
               
            </div>
            <!--/.categoryProduct || product content end-->
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

            @Html.PagedListPager( Model, page => Url.Action("Products", new { page, catagory=@TempData["catagory"] }) )
            
           
            <!--/.categoryFooter-->
        </div>
        <!--/right column end-->
    </div>
    <!-- /.row  -->
</div>
<!-- /main container -->

<div class="gap"></div>

<!-- Product Details Modal  -->
<div class="modal fade" id="productSetailsModalAjax" tabindex="-1" role="dialog"
     aria-labelledby="productSetailsModalAjaxLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->