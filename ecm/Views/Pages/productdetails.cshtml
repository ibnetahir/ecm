@model ecm.Models.item

@section title{
    @ViewBag.Title
}

<div class="container main-container headerOffset">
    <div class="row">
        <div class="breadcrumbDiv col-lg-12">
            <ul class="breadcrumb">
                <li><a href="~/pages/index">Home</a></li>
                <li><a href="~/pages/products">Home Appliances</a></li>
                <li class="active">Product</li>
            </ul>
        </div>
    </div>
    <div class="row transitionfx">

        <!-- left column -->
        <div class="col-lg-6 col-md-6 col-sm-6">
            <!-- product Image and Zoom -->

            <div class="main-image sp-wrap col-lg-12 no-padding style3">

                <a href="~/images/@Model.photo1"><img src="~/images/@Model.photo1" class="img-responsive" alt="img"></a>
                <a href="~/images/@Model.photo2"><img src="~/images/@Model.photo2" class="img-responsive" alt="img"></a>
                <a href="~/images/@Model.photo3"><img src="~/images/@Model.photo3" class="img-responsive" alt="img"></a>

            </div>
        </div>
        <!--/ left column end -->

        <!-- right column -->
        <div class="col-lg-6 col-md-6 col-sm-5">
            <h2 class="product-title"> @Model.name </h2>

                
                <div class="product-price"><span class="price-sales"> $@Model.unit_price</span>
                </div>
                <div class="details-description">
                    <p> @Model.description </p>
                </div>
               

                <div class="productThumb"></div>
                <!--/.productThumb-->
            <form action="/Cart/addToCart/@Model.Id" method="post">
                <div class="productFilter productFilterLook2">
                    <div class="row">
                        <div class="col-lg-6 col-sm-6 col-xs-6">
                            <div class="filterBox">
                                <label>Quantity</label>
                                <input class="quanitySniper" type="text" value="0" name="quanitySniper">
                            </div>
                        </div>
                    </div>
                </div>
                <!-- productFilter -->

                <div class="cart-actions">
                    <div class="addto row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                                       @{
                                if (Session["username"] == null)
                                {
                                     
                                        <a href="#" data-toggle="modal" data-target="#ModalLogin"> <span class="hidden-xs">Add to Cart</span></a>
                                    
                                }
                                else
                                {
                                    <button class="button btn-block btn-cart cart first" title="Add to Cart" type="submit">Add to Cart</button>
                                }
                            }

</div>
                    </div>
                    <div style="clear:both"></div>
                    <h3 class="incaps"><i class="fa fa fa-check-circle-o color-in"></i> In stock</h3>

                    <h3 style="display:none" class="incaps">
                        <i class="fa fa-minus-circle color-out"></i> Out of stock
                    </h3>

                    <h3 class="incaps"><i class="glyphicon glyphicon-lock"></i> Secure online ordering</h3>
                </div>
            </form>
                <!--/.cart-actions-->

                <div class="clear"></div>
                

                <div style="clear:both"></div>
                
                <!--/.product-share-->

        </div>
        <!--/ right column end -->

    </div>
    <!--/.row-->


    <div style="clear:both"></div>
</div>
<!-- /main-container -->

@section scripts{

    
<!-- jquery-migrate only for product details -->
<script src="http://code.jquery.com/jquery-migrate-1.2.1.js"></script>


<!-- include smoothproducts // product zoom plugin  -->
<script type="text/javascript" src="~/content/assets/js/smoothproducts-thumb.js"></script>

    
<script src="~/content/assets/plugins/rating/bootstrap-rating.min.js"></script>

    <script>
        (function ($) {
            $('.spinner .btn:first-of-type').on('click', function () {
                $('.spinner input').val(parseInt($('.spinner input').val(), 10) + 1);
            });
            $('.spinner .btn:last-of-type').on('click', function () {
                $('.spinner input').val(parseInt($('.spinner input').val(), 10) - 1);
            });
        })(jQuery);
    </script>


}